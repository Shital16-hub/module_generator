# ============================================================================
# AZURE OPENAI CONFIGURATION
# ============================================================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1-mini
OPENAI_API_VERSION=2024-10-01-preview

# ============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# ============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=tasconnect_knowledge_base

# ============================================================================
# NEO4J KNOWLEDGE GRAPH CONFIGURATION
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# For Azure OpenAI, this is your deployment name
LLM_MODEL_NAME=gpt-4.1-mini
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# ============================================================================
# EMBEDDING MODEL CONFIGURATION
# ============================================================================
# Options: 
# - sentence-transformers (local, free)
# - text-embedding-3-small (OpenAI)
# - text-embedding-ada-002 (OpenAI)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_MODEL_TYPE=sentence-transformers

# If using Azure OpenAI embeddings (optional):
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
MAX_ITERATIONS=8
SEARCH_TOP_K=10
MIN_RELEVANCE_SCORE=0.7

# ============================================================================
# LANGSMITH (OPTIONAL - FOR TRACING AND DEBUGGING)
# ============================================================================
LANGSMITH_API_KEY=
LANGSMITH_TRACING=false
LANGSMITH_PROJECT=training_generator_agent

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO